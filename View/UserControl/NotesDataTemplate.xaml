<UserControl
    x:Class="UWPYourNote.View.usercontrol.NotesDataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UWPYourNote.View.usercontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    mc:Ignorable="d">

    <Grid MaxHeight="500" Background="{x:Bind NoteContentBackground, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Name="Titles"
            Margin="10,10,0,0"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="Black"
            Text="{x:Bind notesTemplate.title, Mode=OneWay}"
            TextTrimming="CharacterEllipsis" />
        <ScrollViewer Grid.Row="1">
            <RichEditBox
                Name="Contents"
                Margin="15"
                FontSize="14"
                HorizontalTextAlignment="Left"
                Style="{StaticResource NotesDataRichEdit}"
                TextWrapping="Wrap" />
        </ScrollViewer>
        <Border
            Grid.Row="2"
            Margin="5,0,5,5"
            BorderBrush="Black"
            BorderThickness="0,1,0,0"
            CornerRadius="4">
            <TextBlock Foreground="#000000" Text="{x:Bind ShowModifiedTime(notesTemplate.modifiedDay)}" />
        </Border>
    </Grid>






</UserControl>


