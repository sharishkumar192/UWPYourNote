<UserControl
    x:Class="UWPYourNote.View.usercontrol.ThemeToggle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UWPYourNote.View.usercontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    ActualThemeChanged="UserControl_ActualThemeChanged"
    mc:Ignorable="d">
    <Grid>
        <ToggleButton
            Name="Toggle"
            Click="Button_Click"
            Content="&#xE793;"
            CornerRadius="4"
            FontFamily="Segoe MDL2 Assets"
            IsChecked="{x:Bind ToggleIsChecked, Mode=OneWay}"
            Style="{StaticResource ThemeToggleStyle}" />
    </Grid>
</UserControl>
