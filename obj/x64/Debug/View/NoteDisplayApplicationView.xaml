<Page x:ConnectionId='1'
    x:Class="UWPYourNote.View.NoteDisplayApplicationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:UWPYourNoteLibrary.Models"
    xmlns:local="using:YourNoteUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrol="using:UWPYourNote.View.usercontrol"
    mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="ShareUser"                       >

            <StackPanel x:ConnectionId='7'>
                <TextBlock x:ConnectionId='8'
                    Margin="0,5,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Black"
                                         />
                <TextBlock x:ConnectionId='9'
                    Margin="0,0,0,5"
                    FontSize="14"
                    Foreground="Black"
                                           />
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="ShareUsers"                       >

            <StackPanel x:ConnectionId='3'
                Margin="0,5,0,0"
                BorderBrush="#f5f5f5"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='4'
                    Margin="0,5,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Black"
                                         />
                <TextBlock x:ConnectionId='5'
                    Margin="0,0,0,5"
                    FontSize="14"
                    Foreground="Black"
                                           />
            </StackPanel>

        </DataTemplate>


    </Page.Resources>


    <Grid x:ConnectionId='10'                                                         >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>




        <TextBox x:ConnectionId='11'
            Name="TitleOfNote"
            Height="50"
            Margin="30,10,10,10"
            FontSize="28"
            Foreground="Black"
            MaxLength="100"
            Style="{StaticResource TitleDisplayStyle}"
                                                        
                                                                       />


        <Border x:ConnectionId='12'
            Name="NoteMenuOptionsContainer"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Background="Transparent"
            CornerRadius="4">


            <usercontrol:NoteEditOptionsControl x:ConnectionId='14'
                x:Name="NoteMenuOptions"
                Margin="5,0,5,5"
                                                                               />
        </Border>





        <RichEditBox x:ConnectionId='13'
            Name="ContentOfNote"
            Grid.Row="2"
            Margin="30,10,10,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            FontSize="20"
            Foreground="Black"
            IsSpellCheckEnabled="False"
            Style="{StaticResource RichEditStyle}"
                                                                        
            TextWrapping="Wrap" />




    </Grid>
</Page>

