<Page x:ConnectionId='1'
    x:Class="UWPYourNote.View.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:UWPYourNoteLibrary.Models"
    xmlns:local="using:UWPYourNote.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="0"
    MinHeight="0"
    mc:Ignorable="d">

    <Page.Background>
        <ImageBrush ImageSource="{ThemeResource ApplicationDropoutImage}" />
    </Page.Background>




    <Page.Resources>
        <DataTemplate x:Key="EmailIdofUsers"                       >
            <StackPanel x:ConnectionId='7'
                Width="Auto"
                Height="Auto"
                Margin="0"
                BorderThickness="0,0,0,1"
                Orientation="Horizontal"
                Style="{StaticResource ListViewLists}">

                <Image
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    Source="/Assets/LockScreenLogo.scale-200.png" />
                <StackPanel>
                    <TextBlock x:ConnectionId='8' Style="{StaticResource SignUpTextBlocks}"                      />
                    <TextBlock x:ConnectionId='9' Style="{StaticResource SignUpTextBlocks}"                        />
                </StackPanel>

            </StackPanel>


        </DataTemplate>

        <DataTemplate x:Key="EmailIdofUser"                       >
            <StackPanel x:ConnectionId='3'
                Width="Auto"
                Height="Auto"
                Margin="0"
                Orientation="Horizontal"
                Style="{StaticResource ListViewLists}">

                <Image
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    Source="/Assets/LockScreenLogo.scale-200.png" />
                <StackPanel>
                    <TextBlock x:ConnectionId='4' Style="{StaticResource SignUpTextBlocks}"                      />
                    <TextBlock x:ConnectionId='5' Style="{StaticResource SignUpTextBlocks}"                        />
                </StackPanel>

            </StackPanel>


        </DataTemplate>

    </Page.Resources>


    <!--<ScrollViewer Name="LogInPageScrollViewer" VerticalScrollBarVisibility="Auto">-->
    <!--<Login fields>-->
    <controls:DropShadowPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        BlurRadius="10"
        Color="Gray">
        <Grid x:ConnectionId='10'
            Name="Something"
            Padding="20,20,20,20"
            CornerRadius="4"
            Style="{StaticResource GridBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Padding="20,0,40,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>

                <!--<Title>-->
                <StackPanel x:ConnectionId='14'
                    Name="Title"
                    Grid.Row="0"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    CornerRadius="4"
                    Style="{StaticResource StackBackground}">

                    <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Margin="0,0,10,10"
                            Source="/Assets/StoreLogo.scale-100.png" />

                        <TextBlock
                            FontSize="20"
                            Foreground="{ThemeResource TextBoxFg}"
                            Text="Notebook" />
                    </StackPanel>
                    <TextBlock
                        Margin="15,5,5,1"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextBoxFg}"
                        Text="Sign in" />

                    <TextBlock
                        Margin="15,1"
                        FontSize="14"
                        Foreground="{ThemeResource TextBoxFg}"
                        Text="to access Notebook" />
                </StackPanel>




                <!--<Email Field>-->
                <TextBox x:ConnectionId='15'
                    Name="EmailBox"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                                                                                   
                    Style="{StaticResource TextBoxStyle}"
                                                                                               
                                                                            />


                <RelativePanel Grid.Row="2" Margin="0,15,0,0">
                    <Border x:ConnectionId='24'
                        Name="EmailFontBorderStyle"
                        Width="Auto"
                        Margin="-10,0,-30,0"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource FontBorderStyle}">
                        <FontIcon x:ConnectionId='25'
                            Name="EmailCheck"
                            HorizontalAlignment="Left"
                            Style="{StaticResource FontIconStyle}"
                                                                                    />
                        <ToolTipService.ToolTip>
                            <TextBlock x:ConnectionId='26'
                                Name="EmailToolTip"
                                                                                
                                                                                          />
                        </ToolTipService.ToolTip>
                    </Border>
                </RelativePanel>

                <!--<Password Field>-->
                <PasswordBox x:ConnectionId='16'
                    Name="PasswordBox"
                    Grid.Row="3"
                                                                                                       
                                                                                  
                                                                                    
                                                                                      
                    Style="{StaticResource PasswordBoxStyle}" />

                <RelativePanel Grid.Row="3" Margin="0,15,0,0">

                    <Border x:ConnectionId='21'
                        Name="PasswordFontBorderStyle"
                        Margin="-10,0,-30,0"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource FontBorderStyle}">

                        <FontIcon x:ConnectionId='22'
                            Name="PasswordCheck"
                            HorizontalAlignment="Left"
                            Style="{StaticResource FontIconStyle}"
                                                                                       />

                        <ToolTipService.ToolTip>
                            <TextBlock x:ConnectionId='23'
                                Name="PasswordToolTip"
                                                                                   
                                                                                             />
                        </ToolTipService.ToolTip>

                    </Border>
                </RelativePanel>


                <!--<Show Password>-->

                <CheckBox x:ConnectionId='17'
                    Name="RevealModeCheckBox"
                    Grid.Row="4"
                    Margin="15,15,15,2"
                                                                             
                                                                                 
                    Style="{StaticResource ValidateCheckBox}"
                                                                                />

                <!--<Buttons>-->

                <RelativePanel Grid.Row="4" Margin="0,15,5,0">
                    <Button x:ConnectionId='20'
                        Name="LogInButton"
                        Width="70"
                        Margin="0,0,10,0"
                                                                      
                        Content="Log In"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource SignUpButtonStyle}" />

                </RelativePanel>



                <StackPanel x:ConnectionId='18'
                    Name="NavigationLink"
                    Grid.Row="5"
                    Margin="15"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,2,0"
                        FontSize="14"
                        Foreground="{ThemeResource TextBoxFg}"
                        Text="New User? Start your journey with us by creating an" />

                    <HyperlinkButton x:ConnectionId='19'
                        x:Name="NavigateToSignUp"
                                                                           
                        Content="account"
                        FontSize="14"
                        Style="{StaticResource NavigationLinks}" />
                </StackPanel>



            </Grid>
            <!--<Column Spacer>-->

            <Grid x:ConnectionId='11'
                Name="ColumnDivider"
                Grid.Column="1"
                Width="1"
                Background="#a1a1a1"
                                                                                        />

            <!--<Email list>-->

            <Grid x:ConnectionId='12'
                Name="FrequentEmailBox"
                Grid.Column="2"
                Padding="35,0,33,10"
                BorderThickness="0"
                CornerRadius="4"
                Style="{StaticResource GridBackground}"
                                                                                          >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="{ThemeResource TextBoxFg}"
                    Text="Choose an account" />


                <ListView x:ConnectionId='13'
                    Name="FrequentEmail"
                    Grid.Row="1"
                    Width="300"
                    Height="300"
                    IsItemClickEnabled="True"
                                                               
                    ItemContainerStyle="{StaticResource LoginListViewItem}"
                                                                                            
                    Style="{StaticResource LoginListView}">
                    <ListView.ItemTemplateSelector>
                        <data:ItemsDataTemplateSelector AllItems="{StaticResource EmailIdofUsers}" LastItems="{StaticResource EmailIdofUser}" />
                    </ListView.ItemTemplateSelector>

                </ListView>

            </Grid>


        </Grid>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationLink.Visibility" Value="Collapsed" />

                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="300" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationLink.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FrequentEmailBox.Visibility" Value="Collapsed" />
                        <Setter Target="ColumnDivider.Visibility" Value="Collapsed" />

                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FrequentEmailBox.Visibility" Value="Visible" />
                        <Setter Target="ColumnDivider.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>


        </VisualStateManager.VisualStateGroups>
    </controls:DropShadowPanel>

    <!--</ScrollViewer>-->

</Page>

